            </div>
            <div class="col-sm-10">
              <%= f.text_field :description %>
            </div>
          </div>

              <div class="form-group">
                  <div class="col-sm-offset-2 col-sm-10">
                      <%= f.submit class: 'btn btn-primary btn-lg' %>
