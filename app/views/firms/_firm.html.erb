<% obj.each do |firm| %>
    <div class="row">
        <div class="col-sx-8 col-sx-offset-2">
            <div class="well well-lg">
                <div class="firm-name">
                    <%= link_to firm.name, firm_path(firm) %>
                </div>
                <div class="firm-body">
                    <%= truncate(firm.description, length: 100) %>
                    <div class="firm-meta-details">
                  <!--      Created by: < % # = firm.user.username if firm.user% >, -->
                      <small>  <%= time_ago_in_words(firm.created_at) %> ago,
                        last updated: <%= time_ago_in_words(firm.updated_at) %> ago</small> 
                    </div>
                </div>
                
                <% #if firm.categories.any? %>
                    <p><%#= render firm.categories %></p>
                <% #end %>
                
                <% # if logged_in? && (current_user == firm.user || current_user.admin?) %>
                    <div class="firm-actions">
                       <%= link_to "Edit this firm", edit_firm_path(firm), class: "btn btn-xs btn-primary" %>
                       <%= link_to "Delete this firms", firm_path(firm), method: :delete, data: { confirm: "Are you sure you want to delete the firm?"}, class: "btn btn-xs btn-danger" %>
                    </div>
                 <% #end %>
            </div>
        </div>
    </div>
     
 <% end %>