<h2 align="center"><%= @article.title.upcase %></h2>

<div class="well col-sx-5 col-sx-offset-2">
    <h4 class="text-center description"> <strong> Description:</strong></h4>
    <hr>
    <%= simple_format(@article.description) %>

    <div class="article-actions">
        <%= link_to "View all articles", articles_path, class: "btn btn-xs btn-success" %>
        <%= link_to "Delete this articles", articles_path(@article), method: :delete, data: { confirm: "Are you sure you want to delete the article?"}, class: "btn btn-xs btn-danger" %>
        <%= link_to "Edit this article", edit_article_path(@article), class: "btn btn-xs btn-primary" %>
    </div>
</div>